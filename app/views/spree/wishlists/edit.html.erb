<h1 class="row"><%= I18n.t('spree.wishlist.editing_wishlist') %></h1>
<%= form_for @wishlist do |f| %>
  <p><%= f.label :name, I18n.t('spree.name') %>:&nbsp;<%= f.text_field :name %></p>
  <p><%= f.check_box :is_private %>&nbsp;<%= f.label :is_private, I18n.t('spree.wishlist.is_private') %></p>
  <p><%= f.check_box :is_default %>&nbsp;<%= f.label :is_default, I18n.t('spree.wishlist.is_default') %></p>
  <%= f.submit I18n.t('spree.update') %>
  <%= I18n.t('spree.or') %>
  <%= link_to I18n.t('spree.wishlist.delete_wishlist'), @wishlist, method: :delete, data: { confirm: I18n.t('spree.wishlist.are_you_sure_wishlist') }, class: 'button' %>
<% end -%>
