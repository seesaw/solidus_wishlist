<h1 class="row"><%= I18n.t('spree.wishlist.wishlists') %></h1>
<%= content_tag :ul do %>
  <% @wishlists.each do |wishlist| %>
    <%= content_tag :li do %>
      <%= link_to(wishlist.name, wishlist) %> - <%= wishlist.is_private ? I18n.t('spree.wishlist.private') : I18n.t('spree.wishlist.public') %>
    <% end %>
  <% end %>
<% end %>
